<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Assignment2</display-name>
  
 <servlet>
 	<servlet-name>signup</servlet-name>
 	<servlet-class>com.service.SignUpServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
 	<servlet-name>signup</servlet-name>
 	<url-pattern>/signup</url-pattern>
 </servlet-mapping>
 
<servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.service.Login</servlet-class>
</servlet>
  
<servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>
  
<servlet>
	<servlet-name>Email</servlet-name>
	<servlet-class>com.service.EmailServlet</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>Email</servlet-name>
	<url-pattern>/sendConfirmationEmail</url-pattern>
</servlet-mapping>
  
</web-app>